#!/bin/ksh
# This file is placed in the Public Domain.

daemon="/usr/local/bin/botd"

. /etc/rc.d/rc.subr

rc_pre() {
            groupadd botd
            useradd -b /var/lib -d /var/lib/botd -m -g botd botd 2>&1 &
}

rc_start() {
        ${rcexec} "${daemon} ${daemon_flags} 2>&1 | logger -t botd &"
}

rc_stop() {
            pkill -f botd
}

rc_cmd $1
