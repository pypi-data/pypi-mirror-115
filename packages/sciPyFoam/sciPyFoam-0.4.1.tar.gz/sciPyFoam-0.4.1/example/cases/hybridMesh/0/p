FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 300e5;

boundaryField
{
    left
    {
        type            noFlux;
    }
    right
    {
        type            noFlux;
    }
    top
    {
        type            fixedValue;
        value           uniform 300e5; //300 bar
    }
    bottom
    {
        type            hydrothermalMassFluxPressure;
        q               uniform -0.001;
        //type              fixedFluxPressure;
    }
    wall
    {
        type            noFlux;
    }
    frontAndBack
    {
        type            empty;
    }
}

